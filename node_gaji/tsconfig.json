{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./public",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["*"]
        },
        "downlevelIteration": true,
    },
    "include": ["src/**/*", "src/logger.ts"],
    "exclude": ["node_modules"]
}